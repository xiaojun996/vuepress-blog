@require './code-theme';

// 颜色
$bannerTextColor = #fff; // 首页banner区(博客标题)文本颜色
$accentColor = #42b983;
$arrowBgColor = #ccc;
$badgeTipColor = #42b983;
$badgeWarningColor = darken(#ffe564, 35%);
$badgeErrorColor = #DA5961;
// 布局
$navbarHeight = 3.6rem;
$sidebarWidth = 18rem;
$contentWidth = 860px;
$homePageWidth = 1100px;
$rightMenuWidth = 230px; // 右侧菜单
// 代码块
$lineNumbersWrapperWidth = 2.5rem;

// 浅色模式
.theme-mode-light {
  --scrollbarColor: #42b983;
  --bodyBg: #f4f4f4;
  --mainBg: rgba(255, 255, 255, 1);
  --sidebarBg: rgba(255, 255, 255, 1);
  --blurBg: rgba(255, 255, 255, 0.7);
  --customBlockBg: #f1f1f1;
  --textColor: #2c3e50;
  --textLightenColor: #42b983;
  --borderColor: rgba(0, 0, 0, 0.15);
  --codeBg: #292d3e;
  --codeColor: #bfc7d5;
  --stitchColor: #888282;
  codeThemeLight();
}

// 深色模式
.theme-mode-dark {
  --scrollbarColor: #42b983;
  --bodyBg: rgb(39, 39, 43);
  --mainBg: rgba(30, 30, 34, 1);
  --sidebarBg: rgba(30, 30, 34, 1);
  --blurBg: rgba(30, 30, 34, 0.8);
  --customBlockBg: rgb(39, 39, 43);
  --textColor: rgb(190, 190, 190);
  --textLightenColor: #42b983;
  --borderColor: #424254;
  --codeBg: #292d3e;
  --codeColor: #fff;
  --stitchColor: #42b983;
  codeThemeDark();
}