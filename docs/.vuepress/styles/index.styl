@require '~vuepress-plugin-tabs/dist/themes/default.styl'

section.tabs-component-panel::before {
    content: '';
    display: block;
    position: relative;
    width: 0;
    height: 10em;
    margin-top: -10em;
}

.gt-container {
  /* 修复评论markdown图标不对齐 */
  .gt-ico {
    display: flex !important;
    align-items: center !important;
  }

  .gt-ico-tip {
    &::after {
      content: ' ( win + . ) 或 ( ctrl + command + space ) 打开表情';
      color: #999;
      font-size: 0.8rem;
    }
  }

  .gt-meta {
    border-color: var(--borderColor) !important;
  }

  .gt-comments-null {
    color: var(--textColor);
    opacity: 0.5;
  }

  .gt-header-textarea {
    color: var(--textColor);
    background: rgba(180, 180, 180, 0.1) !important;
  }

  .gt-btn {
    border-color: $accentColor !important;
    background-color: $accentColor !important;
  }

  .gt-btn-preview {
    background-color: rgba(255, 255, 255, 0) !important;
    color: $accentColor !important;
  }

  a {
    color: $accentColor !important;
  }

  .gt-svg svg {
    fill: $accentColor !important;
  }

  .gt-comment-content, .gt-comment-admin .gt-comment-content {
    background-color: rgba(150, 150, 150, 0.1) !important;

    &:hover {
      box-shadow: 0 0 25px rgba(150, 150, 150, 0.5) !important;
    }

    .gt-comment-body {
      color: var(--textColor) !important;
    }
  }
}

.span-shadow {
  background: #ddd; color: #666;
  padding: 3px 5px;
  border-radius: 2px;
}